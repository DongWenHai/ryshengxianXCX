page{
  background:#fff;
}
.product-item{
  padding:20rpx 30rpx;
  box-sizing: border-box;
  display:-webkit-flex;
  display:flex;
  border-bottom:1px solid #f3f3f3;
  background:#fff;
}
.product-img{
  display:inline-block;
  width:200rpx;
  height:200rpx;
  background:#FAFAFA;
  border-radius:4px;
  position:relative;
  overflow: hidden;
}
.product-img>image{
  width:100%;
  position:absolute;
  top:50%;
  left:50%;
  transform: -webkit-translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.product-name{
  font-weight:bold;
}
.product-select{
  width:50rpx;
  height:200rpx;
  position:relative;
  box-sizing: border-box;
  display:-webkit-flex;
  display:flex;
  align-items: center;
}
.product-info{
  width:calc(100% - 250rpx);
  height:200rpx;
  position:relative;
  padding-left:20rpx;
  box-sizing: border-box;
  display:inline-block;
}
.product-feature{
  font-size:28rpx;
  color:#AF9F9F;
}
.product-control{
  height:50rpx;
  position:absolute;
  bottom:0;
  left:0;
  display:-webkit-flex;
  display:flex;
  justify-content: space-between;
  width:100%;
}
.product-price{
  line-height:50rpx;
  color:#F19F24;
}
.product-addcart{
  height:50rpx;
  display:-webkit-flex;
  display:flex;
  align-items: center;
}
.select-icon,.select-icon>image{
  width:50rpx;
  height:50rpx;
}
.hascart{
  padding-top:3px;
  position:relative;
  padding-bottom:50px;
}
.cart-boder{
  width:100%;
  height:3px;
  position:absolute;
  top:0;
  left:0;
}
.cart-tabbar{
  width:100%;
  height:50px;
  background:#fff;
  position:fixed;
  bottom:0;
  left:0;
  display:-webkit-flex;
  display:flex;
  align-items: center;
  box-shadow: 0 0 20rpx 0 #e2e2e2;
}
.cart-tabbar>view{
  width:33.3333%;
}
.select-all-icon{
  display:inline-block;
  width:25px;
  height:25px;
}
.select-all-icon>image{
  width:25px;
  height:25px;
  vertical-align: middle;
}
.select-all-lable{
  display:-webkit-flex;
  display:flex;
  align-items:center;
  justify-content: flex-start;
  padding-left:40rpx;
}
.money-all{
  text-align: right;
  padding-right:10px;
}
.cart-btn{
  width:33.33%;
  background:#F19F24;
  color:#fff;
  text-align: center;
  height:50px;
  line-height:50px;
}
.cart-nodata-btn{
  width:180rpx;
  height:72rpx;
  margin:40rpx auto;
  line-height:72rpx;
  background:#19D368;
  text-align: center;
  color:#fff;
  border-radius:36rpx;
  font-size:28rpx;
}
.cart-nodata-img{
  width:240rpx;
  height:240rpx;
  margin:0 auto;
  padding-top:40rpx;
}
.cart-nodata{
  text-align: center;
}
.disabledBtn{
  pointer-events: none;
  background:#ddd;
}