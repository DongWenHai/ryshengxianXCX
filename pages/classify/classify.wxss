page{
  width:100%;
  height:100%;
}
.classify{
  width:100%;
  height:100%;
}
.classify-nav{
  width:180rpx;
  height:100%;
  background:#f8f8f8;
  float:left;
}
.classify-nav-item{
  width:100%;
  height:88rpx;
  line-height:88rpx;
  text-align: center;
  font-size:30rpx;
  color:#8d7474;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  visibility: hidden;
}
.classify-nav-active{
  position:relative;
  color:#19D368;
  background:#fff;
}
.classify-nav-active:before{
  content:'';
  display:block;
  width:6rpx;
  height:80rpx;
  position:absolute;
  top:4rpx;
  left:0;
  background:#19D368;
}
.classify-nav-active:after{
  content:'';
  display:block;
  width:4rpx;
  height:88rpx;
  position:absolute;
  top:0;
  right:0;
  background:#f8f8f8;
}
.classify-content{
  width:calc(100% - 180rpx);
  height:100%;
  float:right;
  background:#fff;
  padding:30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
}
.classify-item{
  width:calc(33.3333% - 30rpx);
  margin-right:30rpx;
  float:left;
  margin-top:20rpx;
}
.classify-item:active{
  background:#f6f6f6;
}
.classify-item-icon{
  width:100%;
  height:150rpx;
  position:relative;
  overflow: hidden;
}
.classify-item-icon>image{
  width:100%;
  position:absolute;
  top:50%;
  left:50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.classify-item-name{
  text-align: center;
  font-size:28rpx;
  color:#8d7474;
  line-height:25px;
}