page{background:#fff;}
.products{
  padding-top:44px;
}
.products-nav{
  width:100%;
  height:44px;
  background:#fff;
  position:fixed;
  top:0;
  left:0;
  z-index:99;
  border-bottom:1px solid #e2e2e2;
}
.products-nav-item{
  width:100%;
  height:100%;
  line-height:42px;
  text-align: center;
  font-size:30rpx;
  box-sizing: border-box;
}
.nav-active{
  border-bottom:2px solid #37D064;
  color:#37D064;
}
.product-item{
  padding:20rpx 30rpx;
  box-sizing: border-box;
  display:-webkit-flex;
  display:flex;
  border-bottom:1px solid #f3f3f3;
}
.product-img{
  display:inline-block;
  width:200rpx;
  height:200rpx;
  background:#FAFAFA;
  border-radius:4px;
  position:relative;
  overflow: hidden;
}
.product-img>image{
  width:100%;
  position:absolute;
  top:50%;
  left:50%;
  transform: -webkit-translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.product-name{
  font-weight:bold;
}
.product-info{
  display:inline-block;
  width:calc(100% - 200rpx);
  height:200rpx;
  position:relative;
  padding-left:20rpx;
  box-sizing: border-box;
}
.product-feature{
  font-size:28rpx;
  color:#AF9F9F;
}
.product-control{
  height:50rpx;
  position:absolute;
  bottom:0;
  left:0;
  display:-webkit-flex;
  display:flex;
  justify-content: space-between;
  width:100%;
}
.product-price{
  line-height:50rpx;
  color:#F19F24;
}
.product-addcart{
  width:50rpx;
  height:50rpx;
}
.product-addcart>image{
  width:50rpx;
  height:50rpx;
}