page{
  background:#fff;
}

.search-box{
  width:100%; 
  padding:10px;
  position:fixed;
  top:0;
  left:0;
  z-index:99;
}
.search-input{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.search-icons{
  width:36px;
  height:36px;
  line-height:36px;
}
.search-icons>image{
  width:24px;
  height:24px;
  margin:6px auto;
}
.search-input>input{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.search-container{
  padding-top:56px;
}
.search-hot{
  padding:10px;
  display:-webkit-flex;
  display:flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.search-key{
  display:inline-block;
  padding:0 20rpx;
  border:1px solid #A89797;
  color:#A89797;
  line-height:56rpx;
  margin:0 20rpx 20rpx 0;
  border-radius:28rpx;
  font-size:26rpx;
}
.search-history{
  margin-top:20px;
  padding:10px;
}
.search-history-title{
  display:-webkit-flex;
  display:flex;
  justify-content: space-between;
  align-items: center;
  color:#E0E0E0;
  border-bottom:1px solid #E0E0E0;
  padding-bottom:20rpx;
}
.search-his{
  display:inline-block;
  padding:0 20rpx;
  color:#A89797;
  line-height:56rpx;
  margin:0 20rpx 20rpx 0;
  font-size:26rpx;
  position:relative;
}
.delete-icon{
  width:32rpx;
  height:32rpx;
  position:absolute;
  top:-10rpx;
  right:-10rpx;
  background:url(data:image/png;base64,) no-repeat center;
  background-size:cover;
}